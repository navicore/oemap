<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <TextView
        android:id="@+id/lbl_map_name" android:text="@string/map_name_fld_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/txt_map_name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:editable="true"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
                android:text="Quit Time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                />

        <EditText
                android:id="@+id/quitTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:editable="false"
                android:enabled="false"/>

    </LinearLayout>

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quitTimeSeekBar"
            android:layout_gravity="center"
            android:max="100"
            android:progress="34"
            android:layout_margin="8dp"
            android:padding="8dp"
            />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
                android:text="Nearest People to Show"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                />

        <EditText
                android:id="@+id/max_presence_fld"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:editable="false"
                android:enabled="false"/>

    </LinearLayout>

    <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/max_presence_SeekBar"
            android:layout_gravity="center"
            android:max="50"
            android:progress="10"
            android:layout_margin="8dp"
            android:padding="8dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Map"
            android:id="@+id/join_space_button"
            android:layout_gravity="right"
            android:enabled="true"
            android:layout_margin="8dp"
            android:padding="8dp"
            />

</LinearLayout>