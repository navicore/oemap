<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_username_fld_title"
                android:id="@+id/pref_username_fld_label"
                android:layout_gravity="left|center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="30"
                />

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="nobody"
                android:id="@+id/pref_username"
                android:layout_gravity="left|center"
                android:editable="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="70"
                android:imeOptions="actionDone"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_snippit_fld_title"
                android:id="@+id/pref_snippit_fld_label"
                android:layout_gravity="left|center"
                android:editable="false"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="30"
                />

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/pref_snippit"
                android:layout_gravity="left|center"
                android:editable="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="70"
                android:imeOptions="actionDone"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

        <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/pref_show_traffic_title"
                android:id="@+id/pref_show_traffic"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="50"
                />

        <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/pref_show_indoors_title"
                android:id="@+id/pref_show_indoors"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="50"
                />
    </LinearLayout>

</LinearLayout>

